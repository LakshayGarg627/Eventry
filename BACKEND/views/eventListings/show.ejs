<script>
document.addEventListener('DOMContentLoaded', function() {
    const reviewForm = document.querySelector('.review-form');
    const starInputs = document.querySelectorAll('input[name="review[rating]"]');
    const ratingError = document.getElementById('rating-error');
    const starContainer = document.querySelector('.star-rating-input');
    
    if (reviewForm) {
        reviewForm.addEventListener('submit', function(event) {
            let isRatingSelected = false;
            
            // Check if any star is selected
            starInputs.forEach(input => {
                if (input.checked) {
                    isRatingSelected = true;
                }
            });
            
            if (!isRatingSelected) {
                event.preventDefault();
                event.stopPropagation();
                
                // Show error message
                ratingError.style.display = 'block';
                starContainer.classList.add('is-invalid');
                
                // Add red border to star container
                starContainer.style.border = '2px solid #dc3545';
                starContainer.style.borderRadius = '8px';
                starContainer.style.padding = '0.5rem';
            } else {
                // Hide error message if rating is selected
                ratingError.style.display = 'none';
                starContainer.classList.remove('is-invalid');
                starContainer.style.border = 'none';
                starContainer.style.padding = '0';
            }
        });
        
        // Hide error when user selects a star
        starInputs.forEach(input => {
            input.addEventListener('change', function() {
                ratingError.style.display = 'none';
                starContainer.classList.remove('is-invalid');
                starContainer.style.border = 'none';
                starContainer.style.padding = '0';
            });
        });
    }
});
</script>
