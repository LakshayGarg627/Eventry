<body>
    
<div class="event-show-container">
    <div class="row">
        <div class="col-lg-8 col-md-12">
            
            <div class="event-image-container">
                <img src="<%= event.image %>" alt="<%= event.title %>" class="event-main-image">
                <div class="event-image-overlay">
                    <div class="event-categories">
                        <span class="event-type-badge"><%= event.eventType %></span>
                        <span class="event-category-badge"><%= event.eventCategory %></span>
                    </div>
                </div>
            </div>
            
            <div class="event-content">
                <div class="event-owner-badge">
                    <div class="owner-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="owner-info">
                        <span class="owner-label">Created by</span>
                        <span class="owner-username">@<%= event.owner.username %></span>
                    </div>
                </div>
                <h1 class="event-title"><%= event.title %></h1>
                
                <p class="event-description"><%= event.description %></p>
            </div>

            <% if(currUser){ %>
            <div class="reviews-section">
                <div class="reviews-header">
                    <h3 class="reviews-title">
                        <i class="fas fa-star reviews-icon"></i>
                        Reviews & Ratings
                    </h3>
                    <div class="reviews-summary">
                        <% if (event.reviews && event.reviews.length > 0) { %>
                            <%
                            const totalRating = event.reviews.reduce((sum, review) => sum + review.rating, 0);
                            const averageRating = (totalRating / event.reviews.length).toFixed(1);
                            const fullStars = Math.floor(averageRating);
                            const hasHalfStar = averageRating % 1 >= 0.5;
                            %>
                            <div class="average-rating">
                                <span class="rating-number"><%= averageRating %></span>
                                <div class="rating-stars">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <% if(i <= fullStars) { %>
                                            <i class="fas fa-star"></i>
                                        <% } else if(i === fullStars + 1 && hasHalfStar) { %>
                                            <i class="fas fa-star-half-alt"></i>
                                        <% } else { %>
                                            <i class="far fa-star"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                                <span class="total-reviews">(<%= event.reviews.length %> review<%= event.reviews.length !== 1 ? 's' : '' %>)</span>
                            </div>
                        <% } else { %>
                            <div class="average-rating">
                                <span class="rating-number">0.0</span>
                                <div class="rating-stars">
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <span class="total-reviews">(No reviews)</span>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Add Review Form -->
                <div class="add-review-card">
                    <h4 class="form-title">Share Your Experience</h4>
                    <form action="/events/<%=event.id %>/reviews" method="post" novalidate class="needs-validation review-form">
                        <div class="rating-input-group">
                            <label for="rating" class="form-label">Your Rating</label>
                            <div class="star-rating-input">
                                <input type="radio" name="review[rating]" value="5" id="star5">
                                <label for="star5"><i class="fas fa-star"></i></label>
                                <input type="radio" name="review[rating]" value="4" id="star4">
                                <label for="star4"><i class="fas fa-star"></i></label>
                                <input type="radio" name="review[rating]" value="3" id="star3">
                                <label for="star3"><i class="fas fa-star"></i></label>
                                <input type="radio" name="review[rating]" value="2" id="star2">
                                <label for="star2"><i class="fas fa-star"></i></label>
                                <input type="radio" name="review[rating]" value="1" id="star1">
                                <label for="star1"><i class="fas fa-star"></i></label>
                            </div>
                            <div class="invalid-feedback" id="rating-error" style="display: none;">Please select a rating for your review</div>
                        </div>
                        
                        <div class="comment-input-group">
                            <label for="comment" class="form-label">Your Review</label>
                            <textarea name="review[comment]" id="comment" rows="4" required class="form-control review-textarea" placeholder="Share your thoughts about this event..."></textarea>
                            <div class="invalid-feedback">Please add some comments for your review</div>
                        </div>
                        
                        <button type="submit" class="btn btn-review-submit">
                            <i class="fas fa-paper-plane"></i>
                            Submit Review
                        </button>
                    </form>
                </div>

                <!-- Existing Reviews -->
                <div class="reviews-list">
                    <% if (event.reviews && event.reviews.length > 0) { %>
                        <% event.reviews.forEach((review) => { %>
                            <%
                            const timeAgo = Math.floor((Date.now() - new Date(review.createdAt)) / (1000 * 60 * 60 * 24));
                            const timeText = timeAgo === 0 ? 'Today' : timeAgo === 1 ? '1 day ago' : `${timeAgo} days ago`;
                            %>
                            <div class="review-card">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <div class="reviewer-avatar">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="reviewer-details">
                                            <h5 class="reviewer-name"><%= review.author.username %></h5>
                                            <div class="review-meta">
                                                <div class="review-rating">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <% if(i <= review.rating) { %>
                                                            <i class="fas fa-star"></i>
                                                        <% } else { %>
                                                            <i class="far fa-star"></i>
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                                <span class="review-date"><%= timeText %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="review-actions">
                                        <form action="/events/<%=event._id%>/reviews/<%=review._id%>?_method=delete" method="POST" class="delete-review-form">
                                            <button type="submit" class="btn btn-delete-review" onclick="return confirm('Are you sure you want to delete this review?')" title="Delete Review">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <div class="review-content">
                                    <p><%= review.comment %></p>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-reviews">
                            <div class="no-reviews-icon">
                                <i class="fas fa-comment-slash"></i>
                            </div>
                            <h4>No Reviews Yet</h4>
                            <p>Be the first to share your experience about this event!</p>
                        </div>
                    <% } %>
                </div>
            </div>
            <% } else { %>
            <div class="login-prompt-section">
                <div class="login-prompt-card">
                    <div class="login-prompt-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <h3 class="login-prompt-title">Join the Conversation</h3>
                    <p class="login-prompt-message">
                        Sign in to read and share reviews about this event. Connect with other attendees and help the community make informed decisions.
                    </p>
                    <div class="login-prompt-actions">
                        <a href="/login" class="btn btn-primary login-btn">
                            <i class="fas fa-sign-in-alt"></i>
                            Sign In
                        </a>
                        <a href="/signup" class="btn btn-outline-primary register-btn">
                            <i class="fas fa-user-plus"></i>
                            Create Account
                        </a>
                    </div>
                    <div class="login-prompt-features">
                        <div class="feature-item">
                            <i class="fas fa-star feature-icon"></i>
                            <span>Rate events</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-comment feature-icon"></i>
                            <span>Write reviews</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-users feature-icon"></i>
                            <span>Connect with community</span>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

        </div>

        <div class="col-lg-4 col-md-12">
            <!-- Event Details Card -->
            <div class="event-details-card">
                <h3 class="details-heading">Event Details</h3>
                
                <div class="detail-item">
                    <i class="fas fa-calendar-alt detail-icon"></i>
                    <div class="detail-content">
                        <span class="detail-label">Date</span>
                        <span class="detail-value"><%= new Date(event.date).toLocaleDateString('en-US', { 
                            weekday: 'long', 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %></span>
                    </div>
                </div>
                
                <div class="detail-item">
                    <i class="fas fa-map-marker-alt detail-icon"></i>
                    <div class="detail-content">
                        <span class="detail-label">Location</span>
                        <span class="detail-value"><%= event.location %></span>
                    </div>
                </div>
                
                <div class="detail-item">
                    <i class="fas fa-ticket-alt detail-icon"></i>
                    <div class="detail-content">
                        <span class="detail-label">Entry Fee</span>
                        <span class="detail-value price">₹<%= event.entryFee %></span>
                    </div>
                </div>
                
                <% if(currUser && currUser._id.equals(event.owner._id)){ %>
                <div class="action-buttons">
                    <form action="/events/<%=event._id%>/edit" method="get" class="action-form">
                        <button type="submit" class="btn btn-edit">
                            <i class="fas fa-edit"></i>
                            Edit Event
                        </button>
                    </form>
                    <form action="/events/<%=event._id%>?_method=delete" method="post" class="action-form">
                        <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this event?')">
                            <i class="fas fa-trash"></i>
                            Delete Event
                        </button>
                    </form>
                </div>
                <% } else if(currUser) { %>
                <div class="action-buttons">
                    <button type="button" class="btn btn-book" onclick="initiateBooking('<%= event._id %>', '<%= event.title %>', '<%= event.entryFee %>')">
                        <i class="fas fa-ticket-alt"></i>
                        Book Now
                    </button>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div id="paymentModal" class="payment-modal">
    <div class="payment-modal-content">
        <div class="payment-header">
            <h3>Complete Payment</h3>
            <button class="payment-close" onclick="closePaymentModal()">&times;</button>
        </div>
        <div class="payment-body">
            <div class="payment-info">
                <div class="payment-logo">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h4 id="paymentEventTitle"></h4>
                <div class="payment-amount">
                    <span class="amount-label">Amount to Pay</span>
                    <span class="amount-value" id="paymentAmount">₹0</span>
                </div>
            </div>
            <div class="payment-methods">
                <button class="payment-method-btn active" onclick="selectPaymentMethod('card')">
                    <i class="fas fa-credit-card"></i>
                    <span>Card Payment</span>
                </button>
                <button class="payment-method-btn" onclick="selectPaymentMethod('upi')">
                    <i class="fas fa-mobile-alt"></i>
                    <span>UPI</span>
                </button>
                <button class="payment-method-btn" onclick="selectPaymentMethod('netbanking')">
                    <i class="fas fa-university"></i>
                    <span>Net Banking</span>
                </button>
            </div>
            <button class="payment-submit-btn" onclick="processPayment()">
                <i class="fas fa-lock"></i>
                Pay Securely
            </button>
            <p class="payment-note">
                <i class="fas fa-shield-alt"></i>
                Test Mode: No actual payment will be charged
            </p>
        </div>
    </div>
</div>

<script>
let currentEventId = null;
let currentEventTitle = null;
let currentAmount = 0;

function initiateBooking(eventId, eventTitle, amount) {
    // Confirmation dialog
    if (confirm(`Are you sure you want to book "${eventTitle}"?\n\nEntry Fee: ₹${amount}`)) {
        currentEventId = eventId;
        currentEventTitle = eventTitle;
        currentAmount = amount;
        
        // Open payment modal
        document.getElementById('paymentEventTitle').textContent = eventTitle;
        document.getElementById('paymentAmount').textContent = '₹' + amount.toLocaleString('en-IN');
        document.getElementById('paymentModal').style.display = 'flex';
    }
}

function closePaymentModal() {
    document.getElementById('paymentModal').style.display = 'none';
    currentEventId = null;
    currentEventTitle = null;
    currentAmount = 0;
}

function selectPaymentMethod(method) {
    const buttons = document.querySelectorAll('.payment-method-btn');
    buttons.forEach(btn => btn.classList.remove('active'));
    event.target.closest('.payment-method-btn').classList.add('active');
}

function processPayment() {
    const submitBtn = document.querySelector('.payment-submit-btn');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
    
    // Simulate payment processing
    setTimeout(() => {
        // Create form and submit
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/events/${currentEventId}/book`;
        
        const ticketsInput = document.createElement('input');
        ticketsInput.type = 'hidden';
        ticketsInput.name = 'tickets';
        ticketsInput.value = '1';
        
        form.appendChild(ticketsInput);
        document.body.appendChild(form);
        form.submit();
    }, 2000); // 2 second delay to simulate payment
}

// Close modal on outside click
window.onclick = function(event) {
    const modal = document.getElementById('paymentModal');
    if (event.target == modal) {
        closePaymentModal();
    }
}
</script>

