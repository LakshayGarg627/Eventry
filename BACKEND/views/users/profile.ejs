<% layout("/Layouts/boilerplate") -%>

<div class="container mb-5" style="margin-top: 1rem;">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm profile-header-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar-circle me-4">
                            <i class="fas fa-user fa-3x"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h2 class="mb-1"><%= user.username %></h2>
                            <p class="text-muted mb-2"><i class="fas fa-envelope me-2"></i><%= user.email %></p>
                            <div class="d-flex gap-4 mt-3">
                                <div>
                                    <span class="badge badge-purple fs-6"><%= totalEvents %> Events Created</span>
                                </div>
                                <div>
                                    <span class="badge badge-purple-light fs-6"><%= totalReviews %> Reviews Posted</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs mb-4" id="profileTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="events-tab" data-bs-toggle="tab" data-bs-target="#events" type="button" role="tab" aria-controls="events" aria-selected="true">
                <i class="fas fa-calendar-alt me-2"></i>My Events
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="bookings-tab" data-bs-toggle="tab" data-bs-target="#bookings" type="button" role="tab" aria-controls="bookings" aria-selected="false">
                <i class="fas fa-ticket-alt me-2"></i>My Bookings
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">
                <i class="fas fa-star me-2"></i>My Reviews
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="profileTabContent">
        <!-- My Events Tab -->
        <div class="tab-pane fade show active" id="events" role="tabpanel" aria-labelledby="events-tab">
            <% if(userEvents.length > 0) { %>
                <div class="row g-4">
                    <% for(let event of userEvents) { %>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="event-card">
                                <div class="event-image-wrapper">
                                    <img src="<%= event.image %>" alt="<%= event.title %>" class="event-image">
                                    <div class="event-overlay">
                                        <div class="event-badges">
                                            <span class="badge event-type-badge"><%= event.eventType %></span>
                                            <span class="badge event-category-badge"><%= event.eventCategory %></span>
                                        </div>
                                        <a href="/events/<%= event._id %>" class="btn-overlay">
                                            <i class="fas fa-eye"></i>
                                            View Details
                                        </a>
                                    </div>
                                </div>
                                
                                <div class="event-card-content">
                                    <h3 class="event-card-title"><%= event.title %></h3>
                                    
                                    <div class="event-meta">
                                        <div class="event-date">
                                            <i class="fas fa-calendar-alt"></i>
                                            <span>
                                                <% 
                                                let date = new Date(event.date); 
                                                let options = { 
                                                    month: 'short', 
                                                    day: 'numeric', 
                                                    year: 'numeric' 
                                                };
                                                %>
                                                <%= date.toLocaleDateString('en-US', options) %>
                                            </span>
                                        </div>
                                        
                                        <div class="event-location">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <span><%= event.location %></span>
                                        </div>
                                    </div>
                                    
                                    <div class="event-price">
                                        <span class="price-label">Starting from</span>
                                        <span class="price-value">â‚¹<%= event.entryFee.toLocaleString("en-IN") %></span>
                                    </div>
                                    
                                    <div class="event-card-footer">
                                        <a href="/events/<%= event._id %>" class="btn btn-primary event-btn">
                                            <i class="fas fa-eye"></i>
                                            View Event
                                        </a>
                                        <a href="/events/<%= event._id %>/edit" class="btn btn-outline-warning event-btn">
                                            <i class="fas fa-edit"></i>
                                            Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Events Created Yet</h4>
                    <p class="text-muted">Start creating events to see them here!</p>
                    <a href="/events/new" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i>Create Your First Event
                    </a>
                </div>
            <% } %>
        </div>

        <!-- My Bookings Tab -->
        <div class="tab-pane fade" id="bookings" role="tabpanel" aria-labelledby="bookings-tab">
            <% if(userBookings.length > 0) { %>
                <div class="row g-4">
                    <% for(let booking of userBookings) { %>
                        <% if(booking.event) { %>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="event-card booking-card">
                                    <div class="booking-badge">
                                        <i class="fas fa-check-circle"></i> Booked
                                    </div>
                                    <div class="event-image-wrapper">
                                        <img src="<%= booking.event.image %>" alt="<%= booking.event.title %>" class="event-image">
                                        <div class="event-overlay">
                                            <div class="event-badges">
                                                <span class="badge event-type-badge"><%= booking.event.eventType %></span>
                                                <span class="badge event-category-badge"><%= booking.event.eventCategory %></span>
                                            </div>
                                            <a href="/events/<%= booking.event._id %>" class="btn-overlay">
                                                <i class="fas fa-eye"></i>
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <div class="event-card-content">
                                        <h3 class="event-card-title"><%= booking.event.title %></h3>
                                        
                                        <div class="event-meta">
                                            <div class="event-date">
                                                <i class="fas fa-calendar-alt"></i>
                                                <span>
                                                    <% 
                                                    let date = new Date(booking.event.date); 
                                                    let options = { 
                                                        month: 'short', 
                                                        day: 'numeric', 
                                                        year: 'numeric' 
                                                    };
                                                    %>
                                                    <%= date.toLocaleDateString('en-US', options) %>
                                                </span>
                                            </div>
                                            
                                            <div class="event-location">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <span><%= booking.event.location %></span>
                                            </div>
                                        </div>

                                        <div class="booking-info">
                                            <div class="booking-detail">
                                                <i class="fas fa-ticket-alt"></i>
                                                <span><%= booking.numberOfTickets %> Ticket(s)</span>
                                            </div>
                                            <div class="booking-detail">
                                                <i class="fas fa-clock"></i>
                                                <span>Booked on <%= new Date(booking.bookingDate).toLocaleDateString('en-US', options) %></span>
                                            </div>
                                        </div>
                                        
                                        <div class="event-card-footer">
                                            <a href="/events/<%= booking.event._id %>" class="btn btn-primary event-btn w-100">
                                                <i class="fas fa-eye"></i>
                                                View Event
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-ticket-alt fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Bookings Yet</h4>
                    <p class="text-muted">Start booking events to see them here!</p>
                    <a href="/events" class="btn btn-primary mt-3">
                        <i class="fas fa-search me-2"></i>Browse Events
                    </a>
                </div>
            <% } %>
        </div>

        <!-- My Reviews Tab -->
        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
            <% if(reviewsWithEvents.length > 0) { %>
                <div class="row">
                    <div class="col-12">
                        <% for(let item of reviewsWithEvents) { %>
                            <% if(item.event) { %>
                                <div class="review-card mb-4">
                                    <div class="review-card-header">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <h5 class="review-event-title mb-2">
                                                    <a href="/events/<%= item.event._id %>" class="event-link">
                                                        <%= item.event.title %>
                                                    </a>
                                                </h5>
                                                <div class="review-meta">
                                                    <div class="rating-stars mb-2">
                                                        <% for(let i = 0; i < item.review.rating; i++) { %>
                                                            <i class="fas fa-star star-filled"></i>
                                                        <% } %>
                                                        <% for(let i = item.review.rating; i < 5; i++) { %>
                                                            <i class="far fa-star star-empty"></i>
                                                        <% } %>
                                                        <span class="rating-text"><%= item.review.rating %>/5</span>
                                                    </div>
                                                    <div class="review-date">
                                                        <i class="far fa-calendar-alt me-1"></i>
                                                        <%= new Date(item.review.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="review-card-body">
                                        <p class="review-comment"><%= item.review.comment %></p>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-comment-slash fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Reviews Yet</h4>
                    <p class="text-muted">Start reviewing events to see them here!</p>
                    <a href="/events" class="btn btn-primary mt-3 btn-color">
                        <i class="fas fa-search me-2"></i>Browse Events
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const eventsTab = document.getElementById('events-tab');
    const bookingsTab = document.getElementById('bookings-tab');
    const reviewsTab = document.getElementById('reviews-tab');
    const eventsContent = document.getElementById('events');
    const bookingsContent = document.getElementById('bookings');
    const reviewsContent = document.getElementById('reviews');

    const tabs = [eventsTab, bookingsTab, reviewsTab];
    const contents = [eventsContent, bookingsContent, reviewsContent];

    tabs.forEach((tab, index) => {
        if (tab) {
            tab.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remove active from all tabs
                tabs.forEach(t => {
                    if (t) {
                        t.classList.remove('active');
                        t.setAttribute('aria-selected', 'false');
                    }
                });
                
                // Remove active from all content
                contents.forEach(c => {
                    if (c) {
                        c.classList.remove('show', 'active');
                    }
                });
                
                // Add active to clicked tab
                tab.classList.add('active');
                tab.setAttribute('aria-selected', 'true');
                
                // Add active to corresponding content
                if (contents[index]) {
                    contents[index].classList.add('show', 'active');
                }
            });
        }
    });
});
</script>

